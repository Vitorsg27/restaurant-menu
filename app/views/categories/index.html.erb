<div class="container mx-auto px-4 py-8 max-w-3xl">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Categories" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl text-gray-800">Categorias</h1>
    <div class="flex space-x-4">
      <%= link_to "Nova Categoria", new_category_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700 transition duration-300" %>
      <%= link_to "Voltar", admin_produtos_path, class: "rounded-lg py-3 px-5 bg-gray-500 text-white font-medium hover:bg-gray-600 transition duration-300" %>
    </div>
  </div>

  <div id="categories" class="space-y-4">
    <% @categories.each do |category| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <%= render category %>
        <p class="mt-4">
          <%= link_to "Mostrar esta categoria", category, class: "ml-2 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium text-gray-700 hover:bg-gray-200 transition duration-300" %>
        </p>
      </div>
    <% end %>
  </div>
</div>

