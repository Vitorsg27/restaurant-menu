<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="bg-white p-8 rounded-lg shadow-md">
    <h2 class="font-bold text-4xl text-gray-800 mb-6">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block font-medium text-gray-700" %>
        <%= f.email_field :email, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-500 mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block font-medium text-gray-700" %> <i class="text-sm text-gray-500">(deixe em branco caso não queira alterar)</i>
        <%= f.password_field :password, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500 block mt-1">Ao menos <%= @minimum_password_length %> caracteres</small>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md", autocomplete: "new-password" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block font-medium text-gray-700" %> <i class="text-sm text-gray-500">(Precisamos de sua senha para fazer as alterações)</i>
        <%= f.password_field :current_password, class: "mt-1 block w-full shadow-sm border-gray-300 rounded-md", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 transition duration-300" %>
      </div>
    <% end %>
    
    <div class="flex justify-between">
      <%= link_to "Voltar", :back, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded transition duration-300 mt-9" %>
    </div>
  </div>
</div>
