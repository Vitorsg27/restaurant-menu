<section class="my-12 max-w-screen-xl mx-auto px-6">
<div class="flex items-center justify-center space-x-6">
    <%= link_to 'Todos', menu_path, class: "#{'underline' if params[:categoria] == nil}" %>
    <%= link_to 'Lanches', menu_path(categoria: 'Lanches'), class: "#{'underline' if params[:categoria] == 'Lanches'}" %>
    <%= link_to 'Almoço', menu_path(categoria: 'Almoço'), class: "#{'underline' if params[:categoria] == 'Almoço'}" %>
    <%= link_to 'Bebidas', menu_path(categoria: 'Bebidas'), class: "#{'underline' if params[:categoria] == 'Bebidas'}" %>
</div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-12">
    <% @produtos.each do |produto| %>
      <div class="bg-white border border-gray-100 transition transform duration-700 hover:shadow-xl hover:scale-105 p-4 rounded-lg relative">
        <span class="bg-red-100 border border-red-500 rounded-full text-primary text-sm poppins px-4 py-1 inline-block mb-4 "><%= produto.categoria %></span>
        <img class="w-64 mx-auto transform transition duration-300 hover:scale-105" src="<%= %>" alt="<%= produto.nome %>">
        <div class="flex flex-col items-center my-3 space-y-2">
          <h1 class="text-gray-900 poppins text-lg"><%= produto.nome %></h1>
          <p class="text-gray-500 poppins text-sm text-center"><%= produto.descricao %></p>
          <h2 class="text-gray-900 poppins text-2xl font-bold">R$<%= produto.preco %></h2>
        </div>
      </div>
    <% end %>
  </div>
</section>
