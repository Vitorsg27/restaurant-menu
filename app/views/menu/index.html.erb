<section class="my-12 max-w-screen-xl mx-auto px-6">
  <div class="flex flex-wrap items-center justify-center space-x-4 space-y-4 my-4 ">
    <%= link_to 'Todos', menu_path, class: "mt-4 text-lg font-medium text-gray-700 bg-white border border-gray-300 rounded-lg py-2 px-4 shadow-sm hover:bg-gray-500 hover:text-white transition duration-300 #{'bg-gray-600 text-white' if params[:categoria] == nil}" %>
    <% @category.each do |categoria| %>
      <%= link_to categoria.name, menu_path(categoria: categoria.name), class: "text-lg font-medium text-gray-700 bg-white border border-gray-300 rounded-lg py-2 px-4 shadow-sm hover:bg-gray-500 hover:text-white transition duration-300 #{'bg-gray-600 text-white' if params[:categoria] == categoria.name}" %>
    <% end %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-12">
    <% @produtos.each do |produto| %>
      <div class="bg-white border border-gray-100 transition transform duration-700 hover:shadow-xl hover:scale-105 p-4 rounded-lg relative">
        <span class="bg-red-100 border border-red-500 rounded-full text-primary text-sm poppins px-4 py-1 inline-block mb-4 "><%= produto.category.name %></span>
        <% if produto.image_file.attached? %>
          <%= image_tag produto.thumbnail, loading: "lazy",  class: "w-64 mx-auto transform transition duration-300 hover:scale-105", alt: produto.nome %>
        <% else %>
          <p>Sem imagem</p>
        <% end %>
        <div class="flex flex-col items-center my-3 space-y-2">
          <h1 class="text-gray-900 poppins text-lg"><%= produto.nome %></h1>
          <p class="text-gray-500 poppins text-sm text-center"><%= produto.descricao %></p>
          <h2 class="text-gray-900 poppins text-2xl font-bold">R$<%= produto.preco %></h2>
        </div>
      </div>
    <% end %>
  </div>
</section>