<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <%= link_to 'Categorias', categories_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700 transition m-5"%>
    <%= link_to 'Cardápio', menu_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium hover:bg-blue-700 transition m-5"%>
  </div>

  <h1 class="text-3xl font-bold text-gray-800 text-center mb-8">Produtos</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead>
        <tr class="bg-gray-100">
          <th class="p-4 text-gray-600 font-medium">Nome</th>
          <th class="p-4 text-gray-600 font-medium">Descrição</th>
          <th class="p-4 text-gray-600 font-medium">Preço</th>
          <th class="p-4 text-gray-600 font-medium">Categoria</th>
          <th class="p-4 text-gray-600 font-medium">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @produtos.each do |produto| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="p-4 text-gray-700"><%= produto.nome %></td>
            <td class="p-4 text-gray-700"><%= produto.descricao %></td>
            <td class="p-4 text-gray-700">R$ <%= produto.preco %></td>
            <td class="p-4 text-gray-700"><%= produto.category&.name %></td>
            <td class="p-4 text-gray-700">
              <%= link_to 'Mostrar', admin_produto_path(produto), class: "text-blue-600 hover:text-blue-800 transition" %>
              <%= link_to 'Editar', edit_admin_produto_path(produto), class: "text-yellow-600 hover:text-yellow-800 transition" %>
              <%= link_to 'Excluir', admin_produto_path(produto), data: { turbo_method: :delete, turbo_confirm: "Tem certeza que quer excluir?" }, class: "text-red-600 hover:text-red-800 transition" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <%= link_to 'Novo Produto', new_admin_produto_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white font-medium hover:bg-green-700 transition" %>
  </div>
  <div class="mt-6">
    <%= link_to 'Editar Conta', edit_user_registration_path, class: "rounded-lg py-3 px-5 bg-green-600 text-white font-medium hover:bg-green-700 transition" %>
  </div>
</div>
